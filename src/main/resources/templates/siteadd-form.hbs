{{#partial "content"}}

    <div class="container">
        Fill in the form below in order to add a new site.

        <form action="/sites" method="post" id="sites-form" >

            <fieldset>

                <legend>New Site Details:</legend>


                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Site No: </label>
                    <div class="col-sm-5">
                        <input id="siteId"  name="siteId" type="number" class="form-control" required><br>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Site Name: </label>
                    <div class="col-sm-5">
                        <input id="siteName" name="siteName" type="text" class="form-control" required><br>
                    </div>
                </div>


                <div class="form-group row">
                    <label class="col-md-2 col-form-label">Engineer assigned: </label>
                    <div class="col-sm-5">

                        <select id="engineerName" name="engineerName">
                            {{#each engineers}}

                                <option value="{{name}}">{{name}}</option>
                            {{/each}}
                        </select>


                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Status: </label>
                    <div class="col-sm-5">
                        <input id="active-status" type="radio" name="active-status" checked required>Active
                        <input id="active-status" type="radio" name="active-status" required>Decommissioned<br>
                    </div>
                </div>

            </fieldset>
            <input type="submit"> <input type="reset">
        </form>

    </div>

{{/partial}}

{{> layout.hbs}}