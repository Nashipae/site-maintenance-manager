{{#partial "content"}}
    <div >
        <p class="button">{{engineer.name}}</p>
        <p class="button">{{engineer.emp_no}}</p>

        <a class="btn btn-warning btn-sm" href="/engineers/{{engineer.id}}/edit">edit Engineer</a>
    </div>

    <p>Here are all the Sites listed in this Engineer:</p>
    <div class="card">
        <div class="card-header">
            List of sites
        </div>


        <div class="card-body">

            <table class="table">
                <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">SITE NAME</th>
                    <th scope="col">SITE ID</th>

                </tr>
                </thead>

                {{#if sites}}
                    {{#each sites }}

                        <tbody>
                        <tr>
                            <td></td>
                            <td>{{siteName}}</td>
                            <td>{{siteId}}</td>

                        </tr>
                        </tbody>

                    {{/each}}

                {{else}}
                    <div class="card-body">
                        <p>No records</p>
                    </div>
                {{/if}}
            </table>
        </div>
        <div class="card-footer">

            <a class="btn btn-warning btn-sm" href="/engineers/{{editEngineer.id}}/edit">edit Engineer</a>
            <a class="btn btn-warning btn-sm" href="/sites/{{site.id}}/edit">edit Site</a>
            <a class="btn btn-warning btn-sm" href="/engineers/{{site.engineerId}}/sites/{{site.id}}/delete">delete</a>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}